<%= render 'shared/page_title', title: "Available Flowers and Materials" %>

<div align="center">
  <%= will_paginate %>
  <% @ingredients.each do |ing| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="corsogroup-title"><%= link_to ing.name.capitalize, ingredient_path(ing) %></li>
          <li><small><%= pluralize(ing.wagons.count, "float") if ing.wagons %></small></li>
          <% if logged_in? && current_corsogroup.admin? %>
          <li><%= link_to "Edit this flower or material", edit_ingredient_path(ing) %></li>
          <% end %>
        </div>
      </div>
    </ul>
   <% end %>
   <%= will_paginate %>
</div>