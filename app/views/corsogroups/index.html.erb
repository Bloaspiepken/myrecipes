<%= render 'shared/page_title', title: "Showing all Corsogroups" %>

<div align="center">
  <%= will_paginate %>
  <% @corsogroups.each do |corsogroup| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(corsogroup), corsogroup_path(corsogroup) %></li>
          <li class="corsogroup-title"><%= link_to corsogroup.corsoname.capitalize, corsogroup_path(corsogroup) %></li>
          <li><small><%= pluralize(corsogroup.wagons.count, "float") if corsogroup.wagons %></small></li>
          <li><%= link_to "Delete this corsogroup", corsogroup_path(corsogroup), method: :delete,
                    data: {confirm: "Are you sure you want to delete the corsogroup and all associated floats?"} %></li>
        </div>
      </div>
    </ul>
   <% end %>
   <%= will_paginate %>
</div>